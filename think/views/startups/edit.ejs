<%- include('../partials/header') %>

<div class="container">
	<h1 style="text-align: center; margin-top: 50px">Edit Your Startup <%= startup.name %></h1>
	<div style="width: 30%; margin: 25px auto">
		<form action="/startups/<%= startup._id%>?_method=PUT" method="POST">
			<div class="form-group">
				<input class="form-control" type="text" name="startup[name]" value="<%= startup.name%>">
			</div>
			<div class="form-group">
				<input class="form-control" type="text" name="startup[image]" value="<%= startup.image%>">
			</div>
			<div class="form-group">
				<textarea class="form-control" name="startup[description]"><%= startup.description%></textarea>
			</div>
			<div class="form-group">
				<button class="btn btn-lg btn-primary btn-block">Submit</button>
			</div>
		</form>
		<a href="/startups">Go Back</a>
	</div>
</div>

<%- include('../partials/footer') %>
